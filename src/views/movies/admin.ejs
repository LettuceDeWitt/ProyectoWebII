<h2>Panel Admin</h2>
<p><a class="btn" href="/movie/new">Agregar nueva película</a></p>
<p><a class="btn" href="/">Ir a la galería</a></p>
<!-- En la sección donde muestras las películas -->
<% movies.forEach(movie => { %>
  <div class="movie-card">
    <img src="<%= movie.cover_url %>" alt="<%= movie.title %>">
    <h3><%= movie.title %> (<%= movie.year %>)</h3>
    <p><strong>Director:</strong> <%= movie.director %></p>
    <p><%= movie.description %></p>
    
    <!-- Botón Eliminar -->
    <form action="/movie/<%= movie.id %>/delete" method="post" style="display: inline;">
      <button type="submit" class="btn btn-danger" 
              onclick="return confirm('¿Estás seguro de eliminar esta película?')">
        Eliminar
      </button>
    </form>
  </div>
<% }); %>
